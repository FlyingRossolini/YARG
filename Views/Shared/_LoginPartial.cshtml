@using Microsoft.AspNetCore.Identity
@using YARG.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-link @Html.IsSelected(actions: "Index", controllers: "Manage")">
                <small>
                    <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@localizer["Hello"] @UserManager.GetUserName(User)!</a>
                </small>
            </li>
            <li class="nav-link">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">
                    <small>@localizer["Log out"]</small>
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="@Html.IsSelected(actions: "Login", controllers: "Account")">
            <small>
                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">@localizer["Log in"]</a>
            </small>
        </li>
    </ul>
}
