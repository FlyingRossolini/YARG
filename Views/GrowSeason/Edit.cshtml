                                        <label asp-for="FlgAddMorningSplash" style="justify-content:center"></label>
                                    </small>
                                </div>
                                <div class="col-4">
                                    <small>
                                        <label asp-for="FlgAddEveningSplash" style="justify-content:center"></label>
                                    </small>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2">
                                    <div>
                                        <small><label asp-for="EFEventsPerDay"></label></small>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <input asp-for="EFEventsPerDay" class="form-control" />
                                </div>
                                <div class="col-4 center">
                                    <small>
                                        <input class="form-check-input" asp-for="FlgAddMorningSplash" />
                                    </small>
                                </div>
                                <div class="col-4 center">
                                    <small>
                                        <input class="form-check-input" asp-for="FlgAddEveningSplash" />
                                    </small>
                                </div>
                            </div>
                        </p>
                    </div>
                    <span asp-validation-for="EFEventsPerDay" class="text-danger"></span>

                </div>
            </div>
        </div>*@
        <br />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

    </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>