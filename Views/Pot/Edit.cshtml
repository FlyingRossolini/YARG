@model YARG.Models.Pot

@{
    ViewData["Title"] = "Edit Bucket - " + Model.Name ;
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EFDuration" class="control-label"></label>
                <input asp-for="EFDuration" class="form-control" />
                <span asp-validation-for="EFDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EFAmount" class="control-label"></label>
                <input asp-for="EFAmount" class="form-control" />
                <span asp-validation-for="EFAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EbbSpeed" class="control-label"></label>
                <input asp-for="EbbSpeed" class="form-control" />
                <span asp-validation-for="EbbSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowSpeed" class="control-label"></label>
                <input asp-for="FlowSpeed" class="form-control" />
                <span asp-validation-for="FlowSpeed" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
